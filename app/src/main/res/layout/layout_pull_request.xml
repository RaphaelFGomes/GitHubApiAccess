<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.gomes.ferreira.raphael.githubapiaccess.View.PullRequestActivity"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageViewPullAuthorAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewPullAuthorname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewPullAuthorAvatar"
        android:layout_toEndOf="@+id/imageViewPullAuthorAvatar"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        tools:text="Authorrname" />

    <TextView
        android:id="@+id/textViewPullTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pull Request Title"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageViewPullAuthorAvatar"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/textViewPullDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewPullTitle"
        android:layout_below="@+id/textViewPullTitle"
        android:text="10/05/2018"
        android:textColor="@color/colorStarsForks"/>

    <TextView
        android:id="@+id/textViewPullState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewPullDate"
        android:layout_below="@+id/textViewPullDate"
        android:text="Opened"
        android:textColor="@color/colorStarsForks"/>

    <TextView
        android:id="@+id/textViewPullDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewPullState"
        android:layout_below="@+id/textViewPullState"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:text="Pull Request Description"
        android:textSize="15sp"/>

</RelativeLayout>